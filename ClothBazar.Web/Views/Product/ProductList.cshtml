@model List<Product>

@{
    ViewBag.Title = "ProductList";
}

<script src="~/Scripts/jquery-1.10.2.js"></script>
<div id="tableContiner">
    <h2>ProductList</h2>
    <div>
        <form method="post">
            <input id="searchtxt" name="Search" />
            <button type="button" id="search">Search</button>
            <button id="NewBtn" type="button">New</button>
        </form>

    </div>


    <table>
        <thead>
            <tr>
                <td>Product Name</td>
                <td>Category</td>
                <td>Price</td>
                <td>Actions</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Name</td>
                    <td>-</td>
                    <td>@product.Price</td>
                    <td>
                        <button class="EditBtn" data-id="@product.ID">Edit</button>
                        <button class="DelBtn" data-id="@product.ID">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div id="AddProductCon">

</div>


<script>
    $("#search").click(function () {
        var txtvalue = $("#searchtxt").val();
        $.ajax({
            url: '/Product/ProductList',
            data: {
                search : txtvalue
            }
        }).done(function (data) {

            $("#tableContiner").html(data);
            //alert(data);
        }).fail(function (XMLHttpRequest,textStatus,errorThrown) {
            alert("FAIL");
        })
        
    });

    $("#NewBtn").click(function () {
        $.ajax({
            url: '/Product/Create'
        })
        .done(function (response) {
            $("#AddProductCon").html(response);
        })
        .fail(function (XMLHttpRequest, textStatus, errorThrown) {
            alert("FAIL");
        })
    });

    $(".EditBtn").click(function () {
        $.ajax({
            url: '/Product/Edit',
            data: {
                ID:$(this).attr('data-id')
            }
        })
        .done(function (response) {
            $("#AddProductCon").html(response);
        })
        .fail(function (XMLHttpRequest, textStatus, errorThrown) {
            alert("FAIL");
        })
    });

    $(".DelBtn").click(function () {

        var confirmsms = confirm("Are you sure you want to delete this product?");

        if (confirmsms) {
            $.ajax({
                type: 'POST',
                url: '/Product/Delete',
                data: {
                    ID: $(this).attr('data-id')
                }
            })
           .done(function (response) {
               $("#tableContiner").html(response);
           })
           .fail(function (XMLHttpRequest, textStatus, errorThrown) {
               alert("FAIL");
           })
        }
       
    });

</script>
    
  

